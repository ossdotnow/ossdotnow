{
  "name": "@workspace/db",
  "version": "0.1.0",
  "private": true,
  "exports": {
    ".": "./src/index.ts",
    "./schema": "./src/schema/index.ts",
    "./services": "./src/services/index.ts"
  },
  "scripts": {
    "dev": "drizzle-kit studio",
    "lint": "eslint .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun --conditions=react-server run src/seed/seed-db.ts",
    "db:seed-launches": "bun --conditions=react-server run src/seed/seed-launches.ts",
    "db:make-all-admin": "bun --conditions=react-server run src/seed/make-all-admin.ts",
    "db:update-launch-status": "bun --conditions=react-server run scripts/update-launch-status.ts",
    "format": "prettier --write \"**/*.{ts,tsx,css,,md}\""
  },
  "dependencies": {
    "@workspace/env": "workspace:*",
    "drizzle-orm": "catalog:",
    "postgres": "^3.4.7",
    "server-only": "catalog:"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "drizzle-kit": "^0.31.4",
    "eslint": "catalog:",
    "typescript": "catalog:"
  }
}
